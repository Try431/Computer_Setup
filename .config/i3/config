# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
#       status_command i3status
       position top
        i3bar_command $HOME/.config/polybar/launch.sh
}

##### Custom config #####

# Variables
set $background ~/Pictures/Backgrounds/Yesteryear.png
set $audio_sink alsa_output.pci-0000_01_00.1.hdmi-stereo

# Pulse Audio controls
### If volume controls stop working, try incrementing or decrementing the sink number ###
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl -- set-sink-volume $audio_sink +5% && pactl set-sink-mute $audio_sink 0 #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl -- set-sink-volume $audio_sink -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $audio_sink toggle # mute sound

# Switch pactl sink to HDMI
bindsym $mod+p exec $HOME/scripts/random-scripts/pactl_change_sink.sh alsa_output.pci-0000_01_00.1.hdmi-stereo && $HOME/scripts/random-scripts/random_cava.sh && i3-msg reload

# Switch pactl sink to built-in analog
bindsym $mod+o exec $HOME/scripts/random-scripts/pactl_change_sink.sh alsa_output.pci-0000_00_1f.3.analog-stereo && $HOME/scripts/random-scripts/random_cava.sh && i3-msg reload

# Switch pactl sink to bluetooth headphones
bindsym $mod+b exec $HOME/scripts/random-scripts/pactl_change_sink.sh bluez_sink.58_E2_8F_EE_70_4B.a2dp_sink && $HOME/scripts/random-scripts/random_cava.sh && i3-msg reload


# Refresh cava monitor source and randomize cava gradient
bindsym $mod+r exec $HOME/scripts/random-scripts/random_cava.sh

# Save current cava gradient pair to ~/.config/cava/saved_gradients.txt
bindsym $mod+Shift+s exec $HOME/scripts/random-scripts/save_cava_gradient.sh

# Load random pair of gradients from ~/.config/cava/saved_gradients.txt
bindsym $mod+Shift+f exec $HOME/scripts/random-scripts/load_random_cava_favorite.sh

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Connect HDMI to the right
bindsym $mod+m exec xrandr --output HDMI-0 --auto --left-of eDP-1-1 $HOME/scripts/random-scripts/pactl_change_sink.sh alsa_output.pci-0000_01_00.1.hdmi-stereo && $HOME/scripts/random-scripts/random_cava.sh

# Disconnect external monitors
bindsym $mod+Shift+m exec xrandr --output HDMI-0 --off --output DVI-I-3-2 --off --output DVI-I-2-1 --off --output DP-1-1 --off && $HOME/scripts/random-scripts/pactl_change_sink.sh alsa_output.pci-0000_00_1f.3.analog-stereo && $HOME/scripts/random-scripts/random_cava.sh && feh --bg-scale $background

bindsym $mod+y exec $HOME/.config/polybar/launch.sh

bindsym $mod+c exec compton --config $HOME/.config/compton/combined.conf

bindsym $mod+Shift+c exec killall compton

# Connect HDMI above
bindsym $mod+n exec /home/isaac/scripts/random-scripts/AOC-HDMI-above.sh && feh --bg-scale $background && $HOME/scripts/random-scripts/pactl_change_sink.sh alsa_output.pci-0000_01_00.1.hdmi-stereo && $HOME/scripts/random-scripts/random_cava.sh

# Connect to displayport monitors at work
bindsym $mod+w exec /home/isaac/scripts/random-scripts/displayport.sh && $HOME/scripts/random-scripts/pactl_change_sink.sh alsa_output.pci-0000_00_1f.3.analog-stereo && $HOME/scripts/random-scripts/random_cava.sh && feh --bg-scale $background

# Move workspace between monitors (left and right)
bindsym $mod+x move workspace to output left

# Move workspace between monitors (up and down)
bindsym $mod+z move workspace to output up

# Add workspace to scratchpad
bindsym $mod+Shift+minus move scratchpad

# Toggles through workspaces in scratchpad
bindsym $mod+minus scratchpad show

# Lock screen using ~/scripts/lock.sh
bindsym $mod+Control+l exec $HOME/scripts/random-scripts/lock.sh

# Increase keyboard backlight brightness
bindsym $mod+period exec sudo /usr/local/bin/keyboard_up
# Decrease keyboard backlight brightness
